@model View.ViewModels.SearchViewModel

<h4>SearchViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchPartial">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <select class="form-group" id="SortBy" name="SortBy">
                <option>Title</option>
                <option>Release Date</option>
            </select>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleasedAfter" class="control-label"></label>
                <input asp-for="ReleasedAfter" class="form-control" />
                <span asp-validation-for="ReleasedAfter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleasedBefore" class="control-label"></label>
                <input asp-for="ReleasedBefore" class="form-control" />
                <span asp-validation-for="ReleasedBefore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SearchTerm" class="control-label"></label>
                <input asp-for="SearchTerm" class="form-control" />
                <span asp-validation-for="SearchTerm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

