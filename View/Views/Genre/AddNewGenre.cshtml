@model View.ViewModels.GenreViewModel

@{
    ViewData["Title"] = "AddNewGenre";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewGenre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Genre" class="btn btn-primary" id="CreateGenre"/>
            </div>
        </form>
    </div>
</div>

