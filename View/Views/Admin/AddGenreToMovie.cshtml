@using Microsoft.AspNetCore.Routing
@using View.ViewModels
@model View.ViewModels.GenreViewModel

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGenreToMovie" asp-controller="Admin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input data-val="true" id="MovieId" name="MovieId" type="hidden" value="@Context.GetRouteData().Values["id"]">

            <label asp-for="GenreId" class="control-label"></label>
            <select class="form-control" id="Genre" name="GenreId">
                <option value="-1">All Genres</option>
                @foreach (GenreViewModel genre in Model.AllGenres)
                {
                    <option value="@genre.GenreId">@genre.Genre</option>
                }
            </select>

            <div class="form-group">
                <input type="submit" value="Add to Movie" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

